<form action="/courses/create" method="post">
  <div>
    <label for="course-name">Course Name: </label>
    <input type="text" name="name" id="course-name">
  </div>
  <div>
    <label for="course-startingDate">Starting Date</label>
    <input type="date" name="startingDate" id="course-startingDate">
  </div>
  <div>
    <label for="course-endDate">Ending Date</label>
    <input type="date" name="endDate" id="course-endDate">
  </div>
  <div>
    <label for="course-level">Level</label>
    <select id="course-level" name="level">
      <option value="Beginner">Beginner</option>
      <option value="Intermediate">Intermediate</option>
      <option value="Advanced">Advanced</option>
    </select>
  </div>
  <div>
    <label for="course-available">Available?</label>
    <input type="checkbox" name="available" id="course-available" value="true">
  </div>
  <% if (typeof message != "undefined") { %>
   <div class="error-message"><%= message %></div>
 <% } %>
  <button type="submit">Add Course</button>
</form>
